# Application
NODE_ENV=production
PORT=3000

# Redis
# IMPORTANT: Use 'redis' (service name) when running in Docker
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Binance
BINANCE_SPOT_WS_BASE=wss://stream.binance.com:9443
BINANCE_SPOT_REST_BASE=https://api.binance.com
# miniTicker for price display, kline for real-time candlestick chart updates
BINANCE_STREAMS=btcusdt@miniTicker,ethusdt@miniTicker,bnbusdt@miniTicker,btcusdt@kline_1m,ethusdt@kline_1m,bnbusdt@kline_1m,btcusdt@kline_1h,ethusdt@kline_1h,bnbusdt@kline_1h

# Queue
PRICE_QUEUE_NAME=price

# Frontend CORS
# Use * for Docker or specify your frontend domain
FRONTEND_URL=*
